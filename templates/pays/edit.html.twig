{% extends 'base.html.twig' %}

{% block title %}Modifier le Pays{% endblock %}

{% block body %}
    <h3 class="m-4">Modifier le Pays {{ pays.codePays }}</h3>

    {{ include('pays/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

    <form method="post" action="{{ path('pays_delete', {'id': pays.id}) }}" onsubmit="return confirm('Etes-vous sur de vouloir supprimer');">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pays.id) }}">
        <button class="btn btn-danger ml-4">Supprimer</button>
    </form>

    <a href="{{ path('pays_index') }}" class="btn btn-warning m-4">Retour à la liste</a>

{% endblock %}
