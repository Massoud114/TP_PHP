<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}TP Symfony CRUD Musee{% endblock %}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
              integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <link href="/css/simple-sidebar.css" rel="stylesheet">
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"
                integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
                integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
                crossorigin="anonymous"></script>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    <div class="d-flex" id="wrapper">
        <div class="bg-dark border-right text-light" id="sidebar-wrapper">
            <div class="sidebar-heading">CRUD Musee</div>
            <div class="list-group list-group-flush">
                <a href="{{ path('pays_index') }}"
                   class="list-group-item text-{% if active=="pays" %}dark{% else %}light{% endif%} list-group-item-action bg-{% if active=="pays" %}warning{% else %}dark{% endif%}">Pays</a>
                <a href="{{ path('musee_index') }}"
                   class="list-group-item text-{% if active=="musee" %}dark{% else %}light{% endif%} list-group-item-action bg-{% if active=="musee" %}warning{% else %}dark{% endif%}">Musee</a>
                <a href="{{ path('visiter_index') }}"
                   class="list-group-item text-{% if active=="visiter" %}dark{% else %}light{% endif%} list-group-item-action bg-{% if active=="visiter" %}warning{% else %}dark{% endif%}">Visiter</a>
                <a href="{{ path('ouvrage_index') }}"
                   class="list-group-item text-{% if active=="ouvrage" %}dark{% else %}light{% endif%} list-group-item-action bg-{% if active=="ouvrage" %}warning{% else %}dark{% endif%}">Ouvrage</a>
                <a href="{{ path('bibliotheque_index') }}"
                   class="list-group-item text-{% if active=="bibliotheque" %}dark{% else %}light{% endif%} list-group-item-action bg-{% if active=="bibliotheque" %}warning{% else %}dark{% endif%}">Bibliothèque</a>
                <a href="{{ path('site_index') }}"
                   class="list-group-item text-{% if active=="site" %}dark{% else %}light{% endif%} list-group-item-action bg-{% if active=="site" %}warning{% else %}dark{% endif%}">Site</a>
                <a href="{{ path('referencer_index') }}"
                   class="list-group-item text-{% if active=="referencer" %}dark{% else %}light{% endif%} list-group-item-action bg-{% if active=="referencer" %}warning{% else %}dark{% endif%}">Referencer</a>
                <a href="{{ path('admin') }}"
                   class="mt-4 list-group-item text-warning list-group-item-action bg-dark">Voir la version améliorée</a>
            </div>
        </div>
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-warning" id="menu-toggle">
                    &xlArr;
                </button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    &xrArr;
                </button>

            </nav>

        {% block body %}{% endblock %}
        </div>
    </div>
        <!-- Menu Toggle Script -->
        <script>
			$("#menu-toggle").click(function (e) {
				e.preventDefault();
				$("#wrapper").toggleClass("toggled");
			});
        </script>

        {% block javascripts %}{% endblock %}
    </body>
</html>
